<Window x:Class="PassMaid.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassMaid.Views"
        mc:Ignorable="d"
        FontSize="18"
        WindowStartupLocation="CenterScreen"
        Title="ShellView" Height="150" Width="650">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Row -->
        <TextBox Text="{Binding Password, Mode=TwoWay}" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="10"/>
        
        <Button Content="Encrypt" Grid.Row="0" Grid.Column="1" Height="30" Margin="10"
                Command="{Binding EncryptCommand}"/>

        <!-- Bottom Row -->
        <TextBox Text="{Binding Cipher, Mode=TwoWay}" Grid.Row="1" Grid.Column="0" TextWrapping ="Wrap" VerticalAlignment="Center" Margin="10"/>
        
        <Button Content="Decrypt" Grid.Row="1" Grid.Column="1" Height="30" Margin="10"
                Command="{Binding DecryptCommand}"/>
    </Grid>
</Window>
